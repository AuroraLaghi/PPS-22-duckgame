<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.ComboBox?>
<BorderPane fx:id="pane" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="500.0" prefWidth="800.0" styleClass="root" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="it.unibo.pps.duckgame.view.PlayersMenuView">
    <center>
            <GridPane alignment="CENTER">
                <VBox prefHeight="200.0" prefWidth="400.0" spacing="10.0" GridPane.columnIndex="2"
                      GridPane.columnSpan="7" GridPane.rowIndex="1" GridPane.rowSpan="2">
                  
                    <TableView fx:id="tableView" minHeight="240.0" prefHeight="105.0" prefWidth="333.0"
                               VBox.vgrow="ALWAYS">
                        <columns>
                            <TableColumn fx:id="playerNameColumn" prefWidth="210.0" text="Giocatori"/>
                            <TableColumn fx:id="playerTokenColumn" minWidth="0.0" prefWidth="210.0"
                                         text="Token"/>
                        </columns>
                        <columnResizePolicy>
                            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                        </columnResizePolicy>
                    </TableView>
                    <VBox prefHeight="200.0" prefWidth="100.0" spacing="20.0">
                        <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
                            <TextField fx:id="addPlayerNameTextField" promptText="Nome giocatore"/>
                            <ComboBox fx:id="addTokenComboBox" prefWidth="150.0" promptText="Pedina"/>
                        </HBox>
                        <HBox alignment="TOP_CENTER" fillHeight="false" prefHeight="150.0" prefWidth="200.0"
                              spacing="10.0">
                            <Button fx:id="addPlayerButton" mnemonicParsing="false"
                                    onAction="#checkAndAddPlayerToTableView" text="Aggiungi giocatore"/>
                            <Button fx:id="removePlayerButton" mnemonicParsing="false"
                                    onAction="#removePlayerFromTableView" text="Rimuovi giocatore"/>
                        </HBox>
                    </VBox>
                    <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
                        <padding>
                            <Insets top="47.0"/>
                        </padding>
                        <Button fx:id="startButton" onAction="#playGame" text="Gioca"/>
                        <Button fx:id="exitButton" onAction="#exitGame" text="Esci"/>
                    </HBox>
                </VBox>

            </GridPane>
    </center>
</BorderPane>